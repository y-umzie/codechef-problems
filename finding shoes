#include <iostream>
using namespace std;

int main() {
        int t;
        cin>>t;
        for(int i=0;i<t;i++)
        {
            int n,m;
            cin>>n>>m;
            //n=no of friends; m=no of left shoes
            if(n<m)
            {
                cout<<m-n<<endl;
            }
            else if(n>m)
            {
                cout<<(n-m)+n<<endl;
            }
            else
            {
                cout<<n<<endl;
            }
        }
	return 0;
}
